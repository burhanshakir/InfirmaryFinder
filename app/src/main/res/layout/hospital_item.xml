<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    android:elevation="4dp"
    android:id="@+id/my_tournaments_card_view"
    android:minHeight="150dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/colorLightPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ruby General Hospital"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/tvHospitalName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHospitalName"
            android:gravity="center"
            android:text="East Topsia Road"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/tvHospitalAddress"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>